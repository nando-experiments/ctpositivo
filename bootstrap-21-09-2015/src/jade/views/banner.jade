section.banner
  .main-container
    #bannerCarousel.carousel.slide
      ol.carousel-indicators
        li.active(data-target='#bannerCarousel', data-slide-to='0')
        li(data-target='#bannerCarousel', data-slide-to='1')
        li(data-target='#bannerCarousel', data-slide-to='2')

      .carousel-inner
        .item.active
          img(src='http://lorempixel.com/1300/440/technics/1', alt='')
        .item
          img(src='http://lorempixel.com/1300/440/technics/4', alt='')
        .item
          img(src='http://lorempixel.com/1300/440/technics/9', alt='')

      a.left.carousel-control(href='#bannerCarousel', data-slide='prev')
        span.icon-prev
      a.right.carousel-control(href='#bannerCarousel', data-slide='next')
        span.icon-next